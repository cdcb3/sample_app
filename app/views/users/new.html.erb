<% provide(:title, 'Sign up') %>
<div class="content">
  <div class="full-width">
    <h1>Sign up <%= has_error(@user) %></h1>
    <div class="row">
      <div class="span6 offset3">
        <%= form_for(@user) do |f| %>
          <%= render 'fields', f: f %>
        <% end %>
      </div>
    </div>
  </div>
</div>